<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane onKeyPressed="#handleRefresh" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.maintenance.view.user.UserOverviewController">
   <children>
      <BorderPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <center>
            <SplitPane dividerPositions="0.4907801418439716" focusTraversable="false" BorderPane.alignment="CENTER">
               <items>
                  <AnchorPane>
                     <children>
                        <TableView fx:id="table" layoutX="-12.5" layoutY="58.0" onKeyPressed="#handleDeleteKeyPressed" onMouseClicked="#handleEditMouseClick" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <columns>
                              <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="Nachname" />
                              <TableColumn fx:id="firstNameColumn" minWidth="-Infinity" prefWidth="300.0" text="Vorname" />
                              <TableColumn fx:id="mailColumn" minWidth="-Infinity" prefWidth="400.0" text="Mail" />
                           </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
                  <fx:include fx:id="userData" source="UserData.fxml" />
               </items>
            </SplitPane>
         </center>
         <top>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleNew" text="Neu">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resource/icons/new24.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleEdit" text="Bearbeiten">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resource/icons/edit24.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleDelete" text="Entfernen">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resource/icons/delete24.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
