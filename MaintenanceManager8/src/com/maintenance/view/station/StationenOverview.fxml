<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane onKeyPressed="#handleRefresh" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.maintenance.view.station.StationenOverviewController">
   <children>
      <VBox layoutX="10.0" layoutY="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleNew" text="Neu">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resource/icons/new24.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleEdit" text="Bearbeiten">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resource/icons/edit24.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleDelete" text="Entfernen">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../resource/icons/delete24.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </HBox>
            <SplitPane dividerPositions="0.5" focusTraversable="false" VBox.vgrow="ALWAYS">
               <items>
                  <AnchorPane>
                     <children>
                        <TableView fx:id="table" minWidth="800.0" onKeyPressed="#handleDeleteKeyPressed" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <columns>
                              <TableColumn fx:id="equipmentColumn" minWidth="80.0" prefWidth="-1.0" text="Equipment" />
                              <TableColumn fx:id="nameColumn" minWidth="250.0" prefWidth="250.0" text="Name" />
                              <TableColumn fx:id="auftragColumn" minWidth="118.0" prefWidth="124.0" text="Auftrag" />
                              <TableColumn fx:id="statusColumn" minWidth="70.0" prefWidth="147.0" text="Status" />
                              <TableColumn fx:id="anhangColumn" minWidth="30.0" prefWidth="96.0" text="Anhang" />
                              <TableColumn fx:id="tpmColumn" minWidth="20.0" prefWidth="59.0" text="TPM" />
                              <TableColumn fx:id="robotColumn" minWidth="30.0" prefWidth="75.0" text="Robotic" />
                           </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
                  <AnchorPane>
                     <children>
                        <fx:include fx:id="stationData" source="StationData.fxml" />
                     </children>
                  </AnchorPane>
               </items>
            </SplitPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
